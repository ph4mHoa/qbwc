<?xml version="1.0"?>
<ruleset name="QuickBooks Connector Coding Standard">
    <description>PHP CodeSniffer configuration for QuickBooks Connector</description>

    <!-- What to scan -->
    <file>magento-module/Vendor/QuickbooksConnector/Model</file>
    <file>magento-module/Vendor/QuickbooksConnector/Controller</file>
    <file>magento-module/Vendor/QuickbooksConnector/Api</file>

    <!-- Exclude patterns -->
    <exclude-pattern>*/Test/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/tmp/*</exclude-pattern>

    <!-- Show progress -->
    <arg name="colors"/>
    <arg value="sp"/>
    <arg name="parallel" value="8"/>

    <!-- Use PSR-12 as base standard -->
    <rule ref="PSR12"/>

    <!-- Additional rules -->
    <rule ref="Generic.Arrays.DisallowLongArraySyntax"/>
    <rule ref="Generic.CodeAnalysis.EmptyStatement"/>
    <rule ref="Generic.CodeAnalysis.UnconditionalIfStatement"/>
    <rule ref="Generic.CodeAnalysis.UselessOverridingMethod"/>
    <rule ref="Generic.Commenting.Todo"/>
    <rule ref="Generic.Commenting.Fixme"/>
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="120"/>
            <property name="absoluteLineLimit" value="150"/>
        </properties>
    </rule>

    <!-- Allow longer lines in comments (for URLs, etc.) -->
    <rule ref="Generic.Files.LineLength.TooLong">
        <exclude-pattern>*\.php</exclude-pattern>
    </rule>

    <!-- Ignore certain rules for Magento-specific patterns -->
    <rule ref="PSR1.Classes.ClassDeclaration.MissingNamespace">
        <exclude-pattern>registration.php</exclude-pattern>
    </rule>

    <!-- Allow protected properties with underscore prefix (Magento convention) -->
    <rule ref="PSR2.Classes.PropertyDeclaration.Underscore">
        <severity>0</severity>
    </rule>
</ruleset>
