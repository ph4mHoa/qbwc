<?xml version="1.0"?>
<!--
/**
 * Dependency Injection Configuration
 *
 * @category  Vendor
 * @package   Vendor_QuickbooksConnector
 */
-->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <!-- Preferences: Interface to Implementation Mapping -->
    <preference for="Vendor\QuickbooksConnector\Api\Data\SessionInterface"
                type="Vendor\QuickbooksConnector\Model\Session"/>

    <preference for="Vendor\QuickbooksConnector\Api\Data\JobInterface"
                type="Vendor\QuickbooksConnector\Model\Job"/>

    <preference for="Vendor\QuickbooksConnector\Api\SessionRepositoryInterface"
                type="Vendor\QuickbooksConnector\Model\SessionRepository"/>

    <preference for="Vendor\QuickbooksConnector\Api\JobRepositoryInterface"
                type="Vendor\QuickbooksConnector\Model\JobRepository"/>

    <preference for="Vendor\QuickbooksConnector\Api\QbwcServiceInterface"
                type="Vendor\QuickbooksConnector\Model\QbwcService"/>

    <!-- Resource Model -->
    <preference for="Vendor\QuickbooksConnector\Model\ResourceModel\SessionInterface"
                type="Vendor\QuickbooksConnector\Model\ResourceModel\Session"/>

    <preference for="Vendor\QuickbooksConnector\Model\ResourceModel\JobInterface"
                type="Vendor\QuickbooksConnector\Model\ResourceModel\Job"/>

    <!-- Virtual Logger for QBWC -->
    <virtualType name="QbwcLogger" type="Magento\Framework\Logger\Monolog">
        <arguments>
            <argument name="name" xsi:type="string">qbwc</argument>
            <argument name="handlers" xsi:type="array">
                <item name="system" xsi:type="object">Vendor\QuickbooksConnector\Logger\Handler</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Inject logger into services -->
    <type name="Vendor\QuickbooksConnector\Model\QbwcService">
        <arguments>
            <argument name="logger" xsi:type="object">QbwcLogger</argument>
        </arguments>
    </type>

    <!--
    Callback System Configuration
    Cloned from Rails: QBWC.session_initializer and QBWC.session_complete_success

    To register custom callbacks, add them to the arrays below:
    -->
    <type name="Vendor\QuickbooksConnector\Model\CallbackManager">
        <arguments>
            <argument name="logger" xsi:type="object">QbwcLogger</argument>

            <!-- Session Initializer Callbacks -->
            <!-- Called AFTER authentication succeeds and jobs are pending -->
            <!-- Uncomment examples below or add your own: -->
            <argument name="sessionInitializers" xsi:type="array">
                <!-- Example: Logging session start -->
                <!-- <item name="logging" xsi:type="object">Vendor\QuickbooksConnector\Model\Callback\Example\LoggingSessionInitializer</item> -->

                <!-- Add your custom initializers here -->
                <!-- <item name="custom_init" xsi:type="object">YourVendor\YourModule\Model\CustomSessionInitializer</item> -->
            </argument>

            <!-- Session Complete Callbacks -->
            <!-- Called WHEN session completes all jobs without errors -->
            <!-- Uncomment examples below or add your own: -->
            <argument name="sessionCompleteHandlers" xsi:type="array">
                <!-- Example: Notification on completion -->
                <!-- <item name="notification" xsi:type="object">Vendor\QuickbooksConnector\Model\Callback\Example\NotificationSessionComplete</item> -->

                <!-- Add your custom handlers here -->
                <!-- <item name="custom_complete" xsi:type="object">YourVendor\YourModule\Model\CustomSessionComplete</item> -->
            </argument>
        </arguments>
    </type>

    <!-- Console Commands -->
    <type name="Magento\Framework\Console\CommandList">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="qbwc_job_list" xsi:type="object">Vendor\QuickbooksConnector\Console\Command\Job\ListCommand</item>
                <item name="qbwc_job_create" xsi:type="object">Vendor\QuickbooksConnector\Console\Command\Job\CreateCommand</item>
                <item name="qbwc_job_enable" xsi:type="object">Vendor\QuickbooksConnector\Console\Command\Job\EnableCommand</item>
                <item name="qbwc_job_disable" xsi:type="object">Vendor\QuickbooksConnector\Console\Command\Job\DisableCommand</item>
                <item name="qbwc_job_delete" xsi:type="object">Vendor\QuickbooksConnector\Console\Command\Job\DeleteCommand</item>
                <item name="qbwc_session_list" xsi:type="object">Vendor\QuickbooksConnector\Console\Command\Session\ListCommand</item>
                <item name="qbwc_session_cleanup" xsi:type="object">Vendor\QuickbooksConnector\Console\Command\Session\CleanupCommand</item>
            </argument>
        </arguments>
    </type>

</config>
