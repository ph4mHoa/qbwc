<?xml version="1.0"?>
<!--
/**
 * Access Control List (ACL)
 *
 * Defines admin permissions for QuickBooks module
 *
 * @category  Vendor
 * @package   Vendor_QuickbooksConnector
 */
-->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <!-- Main QuickBooks Resource -->
                <resource id="Vendor_QuickbooksConnector::qbwc" title="QuickBooks" sortOrder="80">
                    <!-- Jobs Management -->
                    <resource id="Vendor_QuickbooksConnector::jobs" title="Jobs" sortOrder="10">
                        <resource id="Vendor_QuickbooksConnector::jobs_view" title="View Jobs" sortOrder="10"/>
                        <resource id="Vendor_QuickbooksConnector::jobs_create" title="Create Jobs" sortOrder="20"/>
                        <resource id="Vendor_QuickbooksConnector::jobs_edit" title="Edit Jobs" sortOrder="30"/>
                        <resource id="Vendor_QuickbooksConnector::jobs_delete" title="Delete Jobs" sortOrder="40"/>
                    </resource>

                    <!-- Sessions Management -->
                    <resource id="Vendor_QuickbooksConnector::sessions" title="Sessions" sortOrder="20">
                        <resource id="Vendor_QuickbooksConnector::sessions_view" title="View Sessions" sortOrder="10"/>
                        <resource id="Vendor_QuickbooksConnector::sessions_delete" title="Delete Sessions" sortOrder="20"/>
                    </resource>

                    <!-- Configuration -->
                    <resource id="Vendor_QuickbooksConnector::config" title="Configuration" sortOrder="30"/>
                </resource>

                <!-- Config Section in Stores â†’ Configuration -->
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Vendor_QuickbooksConnector::config_section" title="QuickBooks Section"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
